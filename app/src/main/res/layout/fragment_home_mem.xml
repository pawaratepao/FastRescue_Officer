<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btStatus"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="สถานะการแจ้งเหตุ"
        android:textSize="20sp"
        android:background="@drawable/selelecter_color"/>

    <Button
        android:id="@+id/imageMemEmer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/selelecter_emergency"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imageMemNews"
            android:background="@drawable/selelecter_news"
            android:scaleType="centerCrop"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imageMemDetail"
            android:background="@drawable/selelecter_detail"
            android:scaleType="centerCrop"/>
    </LinearLayout>


</LinearLayout>